{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "update dataset",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/streaming/dataset.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--mode",
                "update"
            ]
        },
        {
            "name": "create new songs playlist",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/streaming/create_new_songs_playlist.py",
            "console": "integratedTerminal",
            "justMyCode": true,
        },
        {
            "name": "FilePilot Frontend",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "FilePilot/src/welcome.py",
                "--server.port",
                "8080"
            ],
        },
        {
            "name": "SongSmith Frontend",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "SongSmith/src/app.py",
                "--server.port",
                "8081"
            ]
        },
    ]
}